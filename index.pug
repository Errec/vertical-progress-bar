          p Mr Burns
        li.list__item
          img(src="img/characters/moe.png")
          p Moe
        li.list__item
          img(src="img/characters/krusty.png")
          p Krusty
        li.list__item
          img(src="img/characters/grampa.png")
          p Grampa
        li.list__item
