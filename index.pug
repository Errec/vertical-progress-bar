          - var index = 0;
          while index < 10
            li.progress__bullet-placeholder-item
              div.progress__bullet-placehoder
            - index++
      ul.list__grid
        li.list__item.list__item--selected
          img(src="img/characters/homer.png")
          p Homer
        li.list__item
          img(src="img/characters/marge.png")
          p Marge
        li.list__item
